<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_customer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_customer_profile_round"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/darkOrange"
            android:contentDescription="@string/image_holder_for_customer"/>

        <TextView
            android:id="@+id/customerCard_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firstname"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/img_customer"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/customerCard_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lastname"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/img_customer"
            android:layout_below="@id/customerCard_firstname"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/customerCard_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/img_customer"
            android:layout_below="@id/customerCard_lastname"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/customerCard_perioxh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perioxh"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/img_customer"
            android:layout_below="@id/customerCard_email"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>