<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetrishPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ΣΥΝΟΨΗ"
            android:textSize="20sp"
            android:textAlignment="center">

        </TextView>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5"
            android:gravity="center"
            android:padding="8dp"
            android:text="Η σύνοψη θα εμφανιστεί εδώ..."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_fullname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_region_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Region"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Address"
            android:textSize="16sp" />

        <Button
            android:id="@+id/select_customer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Customer" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Επιστροφή"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_finalSubmit"
            android:layout_width="match_parent"
            android:text="ΟΡΙΣΤΙΚΗ ΥΠΟΒΟΛΗ"
            android:enabled="false"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>

</FrameLayout>