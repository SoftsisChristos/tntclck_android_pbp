<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Στρογγυλεμένες γωνίες -->
    <corners android:radius="8dp" />

    <!-- Περίγραμμα (Border) -->
    <stroke
        android:width="1dp"
        android:color="#808080" /> <!-- Γκρι περίγραμμα -->

    <!-- Χρώμα φόντου -->
    <solid android:color="#F5F5F5" /> <!-- Ανοιχτό γκρι φόντο -->

    <!-- Εσωτερικό padding -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
