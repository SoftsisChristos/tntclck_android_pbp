<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border/Stroke -->
    <stroke
        android:width="2dp"
        android:color="#FF9800" /> <!-- Orange color for the border -->

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>
